@model Tenancy.Management.Models.TenantModel





@{
    Layout = "_LayoutProfile";
    ViewData["Title"] = "Profile";
}

<div class="row">

    <partial name="TenantAssetSummary" />

    <div class="col-xl-8 order-xl-1">
        <div class="card">
            <form asp-controller="Home" asp-action="Profile" method="POST">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-12">
                            <h3 class="mb-0">Edit profile </h3>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <h6 class="heading-small text-muted mb-4">
                        User information
                    </h6>
                    <div class="pl-lg-4">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="input-username">Id</label>
                                    <input asp-for="Id" type="text" id="input-username" class="form-control" placeholder="Id" readonly="">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="input-email">Name</label>
                                    <input asp-for="Name" type="text" id="input-username" class="form-control" placeholder="name here" readonly="">
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr class="my-4"/>
                    <!-- Address -->
                    <h6 class="heading-small text-muted mb-4">Contact information</h6>
                    <div class="pl-lg-4">

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="form-control-label" for="input-address">Email Address</label>
                                    <input asp-for="Email" type="email" id="input-email" class="form-control" readonly="">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="form-control-label" for="input-address">Address</label>
                                    <input asp-for="Address" type="text" id="input-address" class="form-control" readonly="">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="form-control-label" for="input-address">Telephone</label>
                                    <input asp-for="Telephone" type="text" id="input-telephone" class="form-control" readonly="">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label class="form-control-label" for="input-city">City</label>
                                    <input asp-for="City" type="text" id="input-city" class="form-control" readonly="">
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label class="form-control-label" for="input-country">Country</label>
                                    <input asp-for="Country" type="text" id="input-country" class="form-control" readonly="">
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label class="form-control-label" for="input-country">Post code</label>
                                    <input asp-for="Postcode" type="text" id="input-postcode" class="form-control" readonly="">
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr class="my-4"/>
                    <!-- Description -->
                    <h6 class="heading-small text-muted mb-4">Information about the company</h6>
                    <div class="pl-lg-4">
                        <div class="form-group">
                            <label class="form-control-label">About Me</label>
                            <textarea asp-for="Note" rows="4" class="form-control" readonly=""></textarea>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row align-items-center">
                        <div class="col-12 text-center">
                            <a class="btn btn-md btn-primary" href="@Url.Action("Edit", "Tenants", new { id=Model.Id })">Edit</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>























